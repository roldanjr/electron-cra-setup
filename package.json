{
  "name": "basic-electron-cra-setup",
  "version": "0.1.0",
  "private": true,
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "electron": "wait-on http://localhost:3000 && electron .",
    "develop": "concurrently \"npm start\" \"npm run electron\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "productName": "<your app name here>",
    "appId": "com.<your company / owner's name>.<app name>",
    "copyright": "Copyright Â© 2020 ${author}",
    "files": [
      "build"
    ],
    "mac": {
      "artifactName": "<your app name>-v${version}-mac.${ext}",
      "category": "public.app-category.<category>",
      "icon": "<icon location>/icon@2x.png"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "<icon location>/icon.ico"
    },
    "portable": {
      "artifactName": "<your app name>-v${version}-portable.${ext}"
    },
    "nsis": {
      "artifactName": "<your app name>-v${version}-setup.${ext}"
    },
    "linux": {
      "artifactName": "<your app name>-v${version}-linux.${ext}",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "<icon location>/icon.png",
      "category": "<category>"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^5.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
